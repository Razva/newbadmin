#!/bin/bash

#yum -y -q install dialog

height=30
width=40
choice_height=20
backtitle="Newb Admin"
title="Newb Admin - CentOS"

options=(1 "CentOS Wizard"
         2 "Zabbix Install"
         3 "Exit")

choice=$(dialog --clear \
                --backtitle "$backtitle" \
                --title "$title" \
                --menu "" \
                $height $width $choice_height \
                "${options[@]}" \
                2>&1 >/dev/tty)

clear
case $choice in
        1) curl -Os https://raw.githubusercontent.com/Razva/newbadmin/master/centos/wizard
        source ./wizard
        source ./index
        ;;
        2) curl -Os https://raw.githubusercontent.com/Razva/newbadmin/master/centos/monitoring/zabbix
        source ./zabbix
        source ./index
        ;;
        3) exit;
esac
