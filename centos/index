#!/bin/bash

#yum -y -q install dialog

height=30
width=40
choice_height=20
backtitle="Newb Admin"
title="Newb Admin - CentOS"

options=(1 "option 1"
         2 "option 2"
         3 "option 3")

choice=$(dialog --clear \
                --backtitle "$backtitle" \
                --title "$title" \
                --menu "" \
                $height $width $choice_height \
                "${options[@]}" \
                2>&1 >/dev/tty)

clear
case $choice in
        1) curl -Os https://raw.githubusercontent.com/Razva/newbadmin/master/centos/wizard
         source ./wizard;
        2) curl -Os https://raw.githubusercontent.com/Razva/newbadmin/master/centos/zabbix
         source ./zabbix;
        3) exit;
esac
